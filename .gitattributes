//PHP if...else...elseif
#if Statement
if ($x<"10"){
   echo "if statement is successful";
}
echo "<br>";
#if-else Statement
if ($x<"10"){
   echo "if-else statement is successful";
} else {
   echo "if statement is successful";
}
echo "<br>";
#If-else-if-else
$z = date("H");
if ($z<"12"){
   echo "Good Morning";
} elseif ($z<"16"){
   echo "Good Afternoon";
} else {
   echo "Good Night";
}
echo "<br>";
#Switch Statement
$d = "100";
switch ($d) {
   case 0: 
      echo "d is equal to 60";
      break;
   case 1:
      echo "d is equal to 70";
      break;
   case 2:
      echo "d is equal to 99";
      break;
   default:
      echo "d is not equal to 60,70 and 99";
}
//PHP LOOP Statements
# While Loop   
while($d <=103) {
   echo "The number is: $d <br>";
   $d++;
}   
# Do-While Loop
do {
   echo "This number is: $d <br>";
   $d++; 
} while ($d <= 110);
# For Loop
/*for ($e = 0; $x <= 10; $e++) {
